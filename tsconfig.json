{
  "compilerOptions": {
    "target": "es2020",
    "module": "Node16",
    "lib": ["es2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "allowUnreachableCode": false
  },
  "include": ["src/**/*.ts"]
}
